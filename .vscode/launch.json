  "version": "0.2.0",
  "configurations": [
    {
      "name": "Dev:tsx",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "pnpm",
      "runtimeArgs": ["dev"],
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "name": "Prod:dist",
      "type": "node",
      "request": "launch",
      "preLaunchTask": "build:tsup",
      "program": "${workspaceFolder}/dist/cli.js",
      "skipFiles": ["<node_internals>/**"]
    }
  ]
}
